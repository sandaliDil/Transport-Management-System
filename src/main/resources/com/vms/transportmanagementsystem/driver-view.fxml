<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="668.0" prefWidth="638.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vms.transportmanagementsystem.controller.DriverController">

    <TextField fx:id="searchField" layoutX="20" layoutY="20" prefWidth="300" promptText="Search by name or license" />
    <Button layoutX="330" layoutY="20" onAction="#handleSearch" text="Search" />

    <Label layoutX="20" layoutY="80" text="Name:" />
    <TextField fx:id="nameField" layoutX="120" layoutY="75" prefHeight="25.0" prefWidth="225.0" />

    <Label layoutX="20" layoutY="120" text="License Number:" />
    <TextField fx:id="licenseField" layoutX="120" layoutY="115" prefHeight="25.0" prefWidth="225.0" />

    <Label layoutX="20" layoutY="160" text="Contact Number:" />
    <TextField fx:id="contactField" layoutX="120" layoutY="155" prefHeight="25.0" prefWidth="225.0" />

    <Label layoutX="22.0" layoutY="214.0" prefHeight="25.0" prefWidth="52.0" text="Address:" />
    <TextArea fx:id="addressArea" layoutX="124.0" layoutY="200.0" prefHeight="77.0" prefWidth="317.0" />

    <Label layoutX="30.0" layoutY="295.0" text="Status:" />
    <ComboBox fx:id="statusComboBox" layoutX="132.0" layoutY="291.0" prefWidth="150" />

    <Button layoutX="125.0" layoutY="331.0" onAction="#handleUpdateDriver" text="Update" />
    <Button layoutX="280.0" layoutY="331.0" onAction="#handleSaveDriver" text="Save " />
    <Button layoutX="391.0" layoutY="331.0" onAction="#clearForm" text="Clear" />

    <TableView fx:id="driverTable" layoutX="20.0" layoutY="417.0" prefHeight="200" prefWidth="600" GridPane.columnSpan="2" GridPane.rowIndex="6">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
            <TableColumn fx:id="nameColumn" prefWidth="100" text="Name" />
            <TableColumn fx:id="licenseColumn" prefWidth="100" text="License No" />
            <TableColumn fx:id="contactColumn" prefWidth="100" text="Contact" />
            <TableColumn fx:id="addressColumn" prefWidth="150" text="Address" />
            <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
        </columns>
    </TableView>

</AnchorPane>
