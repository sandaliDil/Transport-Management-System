<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vms.transportmanagementsystem.controller.FuelController">
    <children>

        <Label text="Vehicle:" layoutX="30" layoutY="30"/>
        <ComboBox fx:id="vehicleComboBox" layoutX="150" layoutY="30" prefWidth="200"/>

        <Label text="Fuel Type:" layoutX="30" layoutY="80"/>
        <ComboBox fx:id="fuelTypeField" layoutX="150" layoutY="80" prefWidth="200"/>

        <Label text="Date:" layoutX="30" layoutY="130"/>
        <DatePicker fx:id="datePicker" layoutX="150" layoutY="130" prefWidth="200"/>

        <Label text="Per Mileage:" layoutX="30" layoutY="180"/>
        <TextField fx:id="perMileageField" layoutX="150" layoutY="180" prefWidth="200"/>

        <Label text="Post Mileage:" layoutX="30" layoutY="230"/>
        <TextField fx:id="postMileageField" layoutX="150" layoutY="230" prefWidth="200"/>

        <Label text="Quantity (L):" layoutX="30" layoutY="280"/>
        <TextField fx:id="quantityField" layoutX="150" layoutY="280" prefWidth="200"/>

        <Button text="Save" layoutX="250" layoutY="330" onAction="#handleSaveButtonAction"/>

    </children>
</AnchorPane>
