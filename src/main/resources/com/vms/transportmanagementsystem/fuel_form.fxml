<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="420.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vms.transportmanagementsystem.controller.FuelController">
    <children>

        <Label layoutX="30" layoutY="30" text="Vehicle:" />
        <ComboBox fx:id="vehicleComboBox" layoutX="150" layoutY="30" prefWidth="200" />

        <Label layoutX="30" layoutY="80" text="Fuel Type:" />
        <ComboBox fx:id="fuelTypeField" layoutX="150" layoutY="80" prefWidth="200" />

        <Label layoutX="30" layoutY="130" text="Date:" />
        <DatePicker fx:id="datePicker" layoutX="150" layoutY="130" prefWidth="200" />

        <Label layoutX="30" layoutY="180" text="Per Mileage:" />
        <TextField fx:id="perMileageField" layoutX="150" layoutY="180" prefWidth="200" />

        <Label layoutX="30" layoutY="230" text="Post Mileage:" />
        <TextField fx:id="postMileageField" layoutX="150" layoutY="230" prefWidth="200" />

        <Label text="Fuel Station" />
        <ComboBox fx:id="fuelStationField" />


        <Label layoutX="30" layoutY="280" text="Quantity (L):" />
        <TextField fx:id="quantityField" layoutX="150" layoutY="280" prefWidth="200" />

        <Button layoutX="250.0" layoutY="361.0" onAction="#handleSaveButtonAction" prefHeight="32.0" prefWidth="99.0" text="Save" />

    </children>
</AnchorPane>
