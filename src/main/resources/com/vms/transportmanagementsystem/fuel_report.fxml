<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.vms.transportmanagementsystem.controller.FuelReportController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <HBox spacing="10">
            <Label text="Start Date:"/>
            <DatePicker fx:id="startDatePicker"/>
            <Label text="End Date:"/>
            <DatePicker fx:id="endDatePicker"/>
            <Button text="Generate Report" onAction="#onGeneratePivotReport"/>
            <Button text="Export to Excel" onAction="#onExportToExcel"/>
            <Button text="Export to PDF" onAction="#onExportToPDF"/>
        </HBox>

        <TableView fx:id="pivotTable" prefHeight="500">
            <columns>
                <TableColumn fx:id="vehicleCol" text="Vehicle Reg. No." prefWidth="150"/>
            </columns>
        </TableView>
    </VBox>

</AnchorPane>
